

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put } ) do |f| %>
  <%= devise_error_messages! %>
    <fieldset>
      <legend>Edit <%= resource_name.to_s.humanize %></legend>

      <%= f.input :email %>
      <%= f.input :password %> <i>(leave blank if you don't want to change it)</i><br /><br />
      <%= f.input :password_confirmation %> 
    </fieldset>

    <fieldset>
      <legend>
        Profile Picture
      </legend>
      <%= f.input :avatar, as: :file %>
      <% if f.object.avatar? %>
        <div class="control-group">
          <label class="control-label">Current avatar</label>
          <div class="controls">
            <%= image_tag f.object.avatar.url(:small) %>
          </div>
        </div>
      <% end %>
    </fieldset>
 
    <fieldset>
      <legend>
        Confirm Changes
      </legend>
       <%= f.input :current_password %> <i>(we need your current password to confirm your changes)</i>
    </fieldset>
  <div>

   
<div class="form-actions">
  <%= f.submit "Update", class: 'btn btn-primary' %>
  <%= link_to "Back", root_path, class: 'btn' %>
</div>
  <h4>
  <p>Unhappy with your account? </p>
  <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>
</h4>

<% end %>
